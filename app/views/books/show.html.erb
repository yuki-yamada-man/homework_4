<div class="container">
  <div class="row">
    <%= render "users/info", user:@user, book:@book_new %>
    <div class="col">
      <h1>Detail of book</h1>
      <table>
        <tbody>
          <tr>
            <td>
              <%= link_to,user_path(@user.id) do %>
               <%= attachiment_image_tag @user, :profile_image, fallback:"no_image.jpg" %>
               <%= @user.name %>
              <% end %>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <% if @user.id == current_user.id %>
            <td>
              <%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-success" %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除すんのかこの野郎！" %>
            </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>