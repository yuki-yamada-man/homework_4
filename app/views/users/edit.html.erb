<div class="container">
  <div class="row">
    <div class="col">
      <h1>Editing of user</h1>
      <%= form_with model: @user, local:true do |f| %>
       <h2>name</h2>
       <%= f.text_field:name %>
       <h2>inrtoduction</h2>
       <%= f.text.area:introduction %>
       <%= f.submit"Update user", class:"btn btn-success" %>
       <%= link_to"show" ,user_path(@user.id), class:"btn btn-primary" %>
        |
       <%= link_to"back" ,users_path, class:"btn btn-danger" %>
      <% end %>
    </div>
  </div>
</div>